{
  "ci": {
    "collect": {
      "numberOfRuns": 2,
      "url": [
        "http://localhost:9000/",
        "http://localhost:9000/blog"
      ]
    },
    "assert": {
      "preset": "lighthouse:no-pwa",
      "assertions": {
        "first-contentful-paint": [
          "warn",
          {
            "maxNumericValue": 2500,
            "aggregationMethod": "optimistic"
          }
        ],
        "interactive": [
          "warn",
          {
            "maxNumericValue": 5000,
            "aggregationMethod": "optimistic"
          }
        ]
      }
    },
    "upload": {
      "target": "temporary-public-storage"
    }
  }
}